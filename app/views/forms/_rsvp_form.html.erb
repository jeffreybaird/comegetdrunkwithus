<%= semantic_form_for @user do |f| %>
  <%= f.inputs :class => 'form-horizontal' do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :party_size %>
    <%= f.input :email %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit %>
  <% end %>
<% end %>